<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <br>
    <a href="/product/add" class="btn btn-primary" ><i class="fa-solid fa-plus"></i>Add Product</a>
  </br>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Company</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <% for (var i =0; i < ProductList.length;  i++ ) { %>
            <tr>
                <td><%= ProductList[i].name %></td>
                <td><%= ProductList[i].company %></td>
                <td><%= ProductList[i].price %></td>
                <td>
                  <a href="/product/edit/<%= ProductList[i].id %>" class="btn btn-info btn-sm"><i class="fa-solid fa-file-pen"></i>Edit</a>
                </td>

                <td>
                  <a href="/product/delete/<%= ProductList[i].id %>" class="btn btn-danger btn-sm"
                    onclick="confirm('Are you sure you want to delete?')"
                    >Delete</a>
                </td>
            </tr>
            <% } %>
          
        </tbody>
      </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>



